<!--코리아텍 상점 상세 페이지-->


<h2 style="text-align:center; color:black ">코리아텍 주변상점</h2>
<%= render 'store/category'%>


<div class = "container">


  <div id="mainbox_storeshow">
    <div id="card_storeshow">
      <div id ="store_show_title">
        <h2><%=@store_find.name%></h2>
        <h2></h2></br>

        <table class = "table">
          <tbody>
          <tr>
            <td style="font-weight:bold" align = "right" class="col-md-2">선 호 도</td>
            <td align = "left">
              <span class='star-rating'>



                <span style ="width:<%=@result%>%"></span>
              </span>
            </td>
          </tr>


          <tr>
            <td style="font-weight:bold" align = "right">카 테 고 리</td>
            <td align = "left"><%=@store_find.category%></td>
          </tr>



          <tr>
            <td style="font-weight:bold" align = "right">전 화 번 호</td>
            <td align = "left"><%=@store_find.phone_number%></td>
          </tr>

          <tr>
            <td style="font-weight:bold" align = "right" class="col-md-2">한 줄 리 뷰</td>

            <td align = "left">
              <form action = "/store/store_review" method = "post">
                  <div class="form-group">
                    <select class="form-control" name="star">
                      <option value = '1'>★☆☆☆☆</option>
                      <option value = '2'>★★☆☆☆</option>
                      <option value = '3'>★★★☆☆</option>
                      <option value = '4'>★★★★☆</option>
                      <option value = '5'>★★★★★</option>
                    </select>
                    <input name = "review" type="text" class="form-control" placeholder="로그인 후 이용 할 수 있습니다.">
                    <input type="hidden" value="<%=@store_find.id%>" name="store_id">


                    <button type="submit" class="btn btn-default">한줄리뷰남기기</button>
                  </div>
              </form>
              <% @store_find.storereview.reverse.each do |r| %>
                  <% if r.star == 1 %>
                      ★☆☆☆☆
                  <% elsif r.star == 2 %>
                      ★★☆☆☆
                  <% elsif r.star == 3 %>
                      ★★★☆☆
                  <% elsif r.star == 4 %>
                      ★★★★☆
                  <% elsif r.star == 5 %>
                      ★★★★★
                  <%end%>


                <%=r.review%> (<%= (r.created_at).in_time_zone("Asia/Seoul").strftime("%Y-%m-%d") %>)</br>

              <%end%>






            </td>
          </tr>

          </tbody>
        </table>


      </div>

    </div>

  </div>
</div>

